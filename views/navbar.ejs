<!-- ***** Header Area Start ***** -->
<header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">

  <div class="container">
    <div class="row">
      <div class="col-12">
        <nav class="main-nav">
          <!-- ***** Logo Start ***** -->
          <a href="/" class="logo">
            <img style="height: unset;" src="/images/main-logo.png" alt="">
          </a>
          <!-- ***** Logo End ***** -->
          <!-- ***** Menu Start ***** -->
          <ul class="nav">
            <li class="scroll-to-section"><a href="#top" class="active">Home</a></li>
            <li class="scroll-to-section"><a href="#services">Services</a></li>
            <li class="scroll-to-section"><a href="#about">About</a></li>
            <% if(data.isLoggedIn==true) { %>
              <li>
                <div class="gradient-button"><a id="modal_trigger" href="/auth/logout"><i class="fa fa-sign-in-alt"></i>
                    Logout</a></div>
              </li>
              <%} else { %>
                <li>
                  <div class="gradient-button"><a id="modal_trigger" href="/auth/login"><i
                        class="fa fa-sign-in-alt"></i>
                      Sign
                      In</a></div>
                </li>
                <% } %>
          </ul>
          <a class='menu-trigger'>
            <span>Menu</span>
          </a>
          <!-- ***** Menu End ***** -->
        </nav>
      </div>
    </div>
  </div>
</header>